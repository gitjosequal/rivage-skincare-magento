<script type="text/javascript">
	require([
		'jquery'
	], function( $ ) {
		$(document).ready(function() {
			$('.ingredients_click').click( function(e){
				e.preventDefault();
				var id = $(this).attr('id');
				$('.popup_content').html();
				$('body').addClass("popup_custom_overflow");
				var url = "<?php echo $baseurl.'ingredients/index/popup'; ?>";
				$.ajax({
					type: "POST",
					url: url,
					datatype: "json",
					data: {'id':id},
					showLoader: true,
					success: function(response)
					{
						showLoader: false;
						var json = $.parseJSON(response);
						if(json.status === 'success'){
							var scroll = $(window).scrollTop();
							
							$('.popup_main_content').show();
							//$('.popup_main_content').css('top',scroll+'px');
							
							$('.popup_content').html(json.html);
						}
					}
				});
			});
			
			$('.ingredients_close').click( function(e){
				$('.popup_main_content').hide();
				$('.popup_content').html();
				$('body').removeClass("popup_custom_overflow");
			});
		});

	}); 
</script>