                    <frontend_model>XP\OrderPdf\Model\Config\Source\ColorPicker</frontend_model>
                </field>
                <field id="new_line" translate="label" type="select" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Join next section With header</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Joins next section with the current without adding an additional line.</comment>
                </field>
            </group>
            <group id="order_info" translate="label" type="text" sortOrder="15"
                   showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Order Information Section</label>
                <field id="bg_color" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1"
                       showInStore="1" canRestore="1">
                    <label>Background Color</label>
                    <frontend_model>XP\OrderPdf\Model\Config\Source\ColorPicker</frontend_model>
                </field>
                <field id="table_border" translate="label" type="select" sortOrder="5" showInDefault="1"
