				<arguments>
					<argument name="block_id" xsi:type="string">expert-advice</argument>
				</arguments>
			</block> -->
			
		<referenceContainer name="content">
		
			<block class="Rivaz\Expertadvice\Block\Form" ifconfig="expertadvice/general/enable_frontend" name="rivaz_expertadvice" template="expertadvice.phtml">
			</block>
		</referenceContainer>
	</body>
</page>
