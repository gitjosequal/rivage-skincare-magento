            <block class="Rivaz\Expertadvice\Block\Adminhtml\Items\View\Tabs" name="rivaz_expertadvice_items_view_tabs">
                <block class="Rivaz\Expertadvice\Block\Adminhtml\Items\View\Tab\Main" name="rivaz_expertadvice_items_view_tab_main"/>
