<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit\Tabs" name="amasty_rewards_rule_edit_tabs" >
                <arguments>
                    <argument name="id" xsi:type="string">amasty_rewards_rule_edit_tabs</argument>
                    <argument name="dest_element_id" xsi:type="string">edit_form</argument>
                    <argument name="title" xsi:type="string" translate="true">Shipping Restrictions Options</argument>
                </arguments>
                <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit\Tab\General" name="amasty_rewards_rule_edit_tab_general"/>
                <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit\Tab\Actions" name="amasty_rewards_rule_edit_tab_actions"/>
                <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit\Tab\Conditions" name="amasty_rewards_rule_edit_tab_conditions"/>
                <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit\Tab\Labels" name="amasty_rewards_rule_edit_tab_labels"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">amasty_rewards_rule_edit_tab_general</argument>
                </action>

                <action method="addTab">
                    <argument name="name" xsi:type="string">actions</argument>
                    <argument name="block" xsi:type="string">amasty_rewards_rule_edit_tab_actions</argument>
                </action>

                <action method="addTab">
                    <argument name="name" xsi:type="string">conditions</argument>
                    <argument name="block" xsi:type="string">amasty_rewards_rule_edit_tab_conditions</argument>
                </action>

                <action method="addTab">
                    <argument name="name" xsi:type="string">labels</argument>
                    <argument name="block" xsi:type="string">amasty_rewards_rule_edit_tab_labels</argument>
                </action>
            </block>
            <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit" template="Amasty_Rewards::rule_js.phtml" name="rewards_quote_edit_jsinit"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Amasty\Rewards\Block\Adminhtml\Rule\Edit" name="amasty_rewards_rule_edit"/>
        </referenceContainer>
    </body>
</page>