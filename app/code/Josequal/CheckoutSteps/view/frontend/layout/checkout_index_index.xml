<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Josequal_CheckoutSteps::css/styles.css" />
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-address-fieldset" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="firstname" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">10</item>
                                                                </item>
                                                                <item name="lastname" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">20</item>
                                                                </item>
                                                                <item name="telephone" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">30</item>
                                                                </item>
                                                                <item name="custom_html_after_telephone" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Josequal_CheckoutSteps/js/view/shipping-address/header-html</item>
                                                                    <item name="displayArea" xsi:type="string">customHtmlAfterTelephone</item>
                                                                    <item name="dataScope" xsi:type="string">customHtmlAfterTelephone</item>
                                                                    <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                    <item name="sortOrder" xsi:type="string">31</item>
                                                                </item>
                                                                <item name="country_id" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">40</item>
                                                                </item>
                                                                <item name="region_id" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">50</item>
                                                                </item>
                                                                <item name="city" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">60</item>
                                                                </item>
                                                                <item name="postcode" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">70</item>
                                                                </item>
                                                                <item name="street" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">80</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                        
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="beforeMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="custom_block" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Josequal_CheckoutSteps/js/view/payment/payment-block</item>
                                                                </item>
                                                                <item name="discount" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magento_SalesRule/js/view/payment/discount</item>
                                                                    <item name="children" xsi:type="array">
                                                                        <item name="errors" xsi:type="array">
                                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                                            <item name="component" xsi:type="string">Magento_SalesRule/js/view/payment/discount-messages</item>
                                                                            <item name="displayArea" xsi:type="string">messages</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>

                                                        <item name="afterMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="back-button" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">35</item>
                                                                    <item name="component"  xsi:type="string">uiComponent</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="template" xsi:type="string">Josequal_CheckoutSteps/back-button</item>
                                                                        <item name="component" xsi:type="string">Josequal_CheckoutSteps/js/view/payment/back-button</item>
                                                                    </item>
                                                                </item>
                                                                <item name="discount" xsi:type="array">
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="componentDisabled" xsi:type="boolean">true</item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                    
                                </item>
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <!--<item name="discount" xsi:type="array">-->
                                                <!--    <item name="component" xsi:type="string">Magento_SalesRule/js/view/payment/discount</item>-->
                                                <!--    <item name="children" xsi:type="array">-->
                                                <!--        <item name="errors" xsi:type="array">-->
                                                <!--            <item name="sortOrder" xsi:type="string">0</item>-->
                                                <!--            <item name="component" xsi:type="string">Magento_SalesRule/js/view/payment/discount-messages</item>-->
                                                <!--            <item name="displayArea" xsi:type="string">messages</item>-->
                                                <!--        </item>-->
                                                <!--    </item>-->
                                                <!--</item>-->
                                                <item name="back-button" xsi:type="array">
                                                    <item name="sortOrder" xsi:type="string">35</item>
                                                    <item name="component"  xsi:type="string">uiComponent</item>
                                                    <item name="config" xsi:type="array">
                                                        <item name="template" xsi:type="string">Josequal_CheckoutSteps/back-button-mobile</item>
                                                        <item name="component" xsi:type="string">Josequal_CheckoutSteps/js/view/payment/back-button</item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>