<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
         <title>Ingredients – RivageCare</title>
		 <meta name="description" content="At the heart of Rivage products are our active ingredients, we draw from 58 natural ingredients and blend them carefully with Dead Sea salts and mud so they deliver remarkable results."/>
		 <link rel="canonical" src="https://rivagecare.com/ingredients" src_type="url"/>
    </head>
    <body>
	<referenceBlock name="page.main.title" remove="true" />
	  <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Our Story</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Our Story</item>
                    <item name="label" xsi:type="string" translate="true">Our Story</item>
					<item name="link" xsi:type="string">{{baseUrl}}our-story</item>
                </argument>
            </action>
			  <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Ingredients</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Ingredients</item>
                    <item name="label" xsi:type="string" translate="true">Ingredients</item>
                </argument>
            </action>
        </referenceBlock>
        <attribute name="class" value="emizen_brand_index"/>
        <referenceContainer name="content">
            <block class="Emizentech\ShopByBrand\Block\Index" name="brand.list.content"  template="Emizentech_ShopByBrand::emizen_brand/list.phtml" cacheable="false">
             </block>
        </referenceContainer>
    </body>
</page>
